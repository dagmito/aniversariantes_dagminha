<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Panel headerText="Panel" expandable="true" expanded="true">
        <content>
            <Table 
                id="table" 
                items="{
                    path: 'produto>/Produtos',
                    sorter: {
                        path: 'ProductName'
                    }
                }">
                <headerToolbar>
                    <Toolbar>
                        <SearchField width="100%" search="onSearch" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <header>
                            <Text text="Status"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="Product Name"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="Quantity"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="Extended Price"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="Shipper Name"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="Shipped Date"/>
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="onPress">
                        <cells>
                            <Text text="{produto>Status}"/>
                            <ObjectIdentifier title="{produto>ProductName}"/>
                            <ObjectNumber number="{produto>Quantity}"/>
                            <ObjectNumber number="{produto>ExtendedPrice}" unit="$"/>
                            <Text text="{produto>ShipperName}"/>
                            <Text text="{path: 'produto>ShippedDate'}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Panel>

</core:FragmentDefinition>



