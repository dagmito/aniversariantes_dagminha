<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="aniver.ui5.controller.Page2">

    <Page title="Cadastro" showNavButton="true" navButtonPress="onNavPress">
        <subHeader>
            <Bar>
                <contentMiddle>
                    <SearchField 
                        id="searchField" 
                        width="100%" 
                        placeholder="{i18n>searchText}" 
                        enableSuggestions="false"/>
                </contentMiddle>
            </Bar>
        </subHeader>
        <content>
            <SplitApp>
                <masterPages>
                    <core:Fragment fragmentName="aniver.ui5.view.List" type="XML"/>
                </masterPages>
                <detailPages>
                    <core:Fragment fragmentName="aniver.ui5.view.Form" type="XML"/>
                </detailPages>
            </SplitApp>
        </content>
    </Page>

</mvc:View>